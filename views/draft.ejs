<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <script src="/javascripts/jquery-2.1.1.min.js" type="text/javascript"></script>
    <script src="/javascripts/bootstrap.min.js"></script>

    <script type="text/javascript">
        function confirmDelete() {
            event.returnValue = confirm("删除是不可恢复的，你确认要删除吗？");
        }
    </script>

</head>
<body>

<% include template_header.ejs %>

<% if (locals.success) { %>
<div id="alt_success" class="alert alert-success">
    <%- success %>
</div>
<% } %>

<% if (locals.error) { %>
<div id="alt_warning" class="alert alert-warning">
    <%= error %>
</div>
<% } %>

<div class="container">

    <div class="panel panel-primary" id="primaryPanel">
        <div class="panel-heading">
            <h3 class="panel-title">Drafts</h3>
        </div>

        <div class="panel-body">

            <% if (locals.articles) { %>
            <% for(var i = 0; i < articles.length; i++) { %>

            <h3>Title: <%= articles[i].title %></h3>
            Date: <%= articles[i].create_date %><br>

            <a href="/article_detail?create_date=<%= articles[i].create_date %>">view</a>
            <a href="/draft/delete?create_date=<%= articles[i].create_date %>" onclick="confirmDelete()">delete</a>
            <br>
            <hr>

            <% } %>
            <% } %>

        </div>
    </div>


</div>

<div class="container">


</div>

<% include template_footer_1.ejs %>

</body>
</html>
